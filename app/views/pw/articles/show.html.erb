<style type="text/css">

</style>
<% stylesheets 'form-elements' %>
<% javascripts 'form-elements' %>

<%= render partials[:nav] %>

<div class="page-container">
    <%= render partials[:header] %>

    <div class="page-content-wrapper">
        <div class="content">
            <div class="jumbotron" data-pages="parallax">
                <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
                    <div class="inner">
                        <ul class="breadcrumb">
                            <li>
                                <p>Articles</p>
                            </li>
                            <li><a href="form_elements.html#" class="active">Edit</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="container-fluid container-fixed-lg">
                <div class="row">
                    <div class="col-md-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title">Edit Article</div>
                            </div>
                            <div class="panel-body">
                                <p>Please complete all the <strong class="red">*</strong> required fields</p>
                                
                                <div class="form-group">
                                    <label><strong class="red">*</strong> Title</label>
                                    <input type="text" class="form-control" require="" placeholder="Enter a title here" ng-model="article.title">
                                </div>

                                <div class="form-group">
                                    <label><strong class="red">*</strong> Short Description</label>
                                    <span class="help">"Must be 100 characters long"</span>
                                    <div class="summernote-wrapper">
                                        <div id="summer-description">Hello Summernote</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label><strong class="red">*</strong> Content Body</label>
                                    <div class="summernote-wrapper">
                                        <div id="summer-body">Hello Summernote</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title">Poster Attachment</div>
                            </div>
                            <div class="poster panel-body no-scroll no-padding">
                                <div class="fallback">
                                    <div class="preview">
                                        <img src=""/>
                                    </div>
                                    <div class="btn btn-default btn-file" ngf-select ng-model="files">Browse</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-group" style="padding-bottom: -10px;">
                                    <label>Tags</label>
                                    <!-- <span class="help">"Separate tags with commas"</span> -->
                                    <input class="tagsinput custom-tag-input" type="text" value="johnsmith@pages.io,janesmith@pages.io"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title">Save As</div>
                            </div>
                            <div class="panel-body">
                                <p>Do you want to publish your new article?</p>
                                <div class="radio radio-success">
                                    <input type="radio" checked="checked" value="0" name="optionyes" id="yes" ng-model="article.status">
                                    <label for="yes">Draft</label>
                                    <input type="radio" value="2" name="optionyes" id="no" ng-model="article.status">
                                    <label for="no">Publish</label>
                                </div>
                                <button class="btn btn-primary" ng-click="doCreateArticle(article)">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%= render partials[:footer] %>
    </div>
</div>